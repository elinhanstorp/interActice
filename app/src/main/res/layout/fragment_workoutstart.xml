<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elin.interactice.workoutstart">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/startbutton"
            android:layout_width="196dp"
            android:layout_height="51dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="94dp"
            android:enabled="true"
            android:text="Start Workout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="141dp"
            android:text="Work out Level:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/LevelGroup"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="132dp"
            android:text="Work out Time:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/TimeGroup"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <RadioGroup
            android:id="@+id/LevelGroup"
            android:layout_width="149dp"
            android:layout_height="170dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="55dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="55dp">

            <RadioButton
                android:id="@+id/radioButtonEasy"
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="44dp"
                android:text="Easy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioButtonMedium"
                android:layout_width="95dp"
                android:layout_height="36dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="12dp"
                android:text="Medium"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButtonEasy" />

            <RadioButton
                android:id="@+id/radioButtonHard"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:layout_marginRight="67dp"
                android:layout_marginTop="14dp"
                android:text="Hard"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButtonMedium" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:src="@drawable/logotype" />

        <RadioGroup
            android:id="@+id/TimeGroup"
            android:layout_width="156dp"
            android:layout_height="183dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LevelGroup">

            <RadioButton
                android:id="@+id/radioButton15min"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginTop="44dp"
                android:text="15 min"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioButton30min"
                android:layout_width="95dp"
                android:layout_height="36dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="12dp"
                android:text="30 min"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton15min" />

            <RadioButton
                android:id="@+id/radioButton45min"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:layout_marginRight="67dp"
                android:layout_marginTop="14dp"
                android:text="45 min"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton30min" />
        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>