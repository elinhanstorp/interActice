<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elin.interactice.workoutstart">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/stepbutton"
            android:layout_width="121dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="51dp"
            android:layout_weight="1"
            android:text="Count steps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/jumpbutton"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Do jumps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/stepbutton"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/startbutton"
            android:layout_width="196dp"
            android:layout_height="51dp"
            android:layout_marginBottom="64dp"
            android:layout_marginLeft="94dp"
            android:text="Start Workout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="141dp"
            android:text="Work out Level:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/LevelGroup"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="132dp"
            android:text="Work out Time:"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/TimeGroup"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textInterActivHeadline"
            android:layout_width="259dp"
            android:layout_height="56dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="7dp"
            android:text="interActive"
            android:textSize="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="38dp" />

        <RadioGroup
            android:id="@+id/LevelGroup"
            android:layout_width="149dp"
            android:layout_height="170dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="55dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="55dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="44dp"
                android:text="Easy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="95dp"
                android:layout_height="36dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="12dp"
                android:text="Medium"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton1" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:layout_marginRight="67dp"
                android:layout_marginTop="14dp"
                android:text="Hard"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton2" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/TimeGroup"
            android:layout_width="156dp"
            android:layout_height="183dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LevelGroup">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginTop="44dp"
                android:text="20 min"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="95dp"
                android:layout_height="36dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="12dp"
                android:text="30 min"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton4" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:layout_marginRight="67dp"
                android:layout_marginTop="14dp"
                android:text="1 hour"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton5" />
        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>